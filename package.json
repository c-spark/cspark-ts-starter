{
  "name": "@cspark/ts-starter",
  "version": "0.0.0-PLACEHOLDER",
  "description": "A Coherent Spark TypeScript starter template",
  "author": "Coherent Spark <team@coherent.global>",
  "homepage": "https://github.com/c-spark/cspark-ts-starter#readme",
  "license": "MIT",
  "keywords": [
    "coherent",
    "spark",
    "typescript",
    "starter",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c-spark/cspark-ts-starter.git"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "echo \">>> no start command specified\" && exit 0",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "build": "tsc",
    "postbuild": "rollup -c",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": "eslint \"{src,test}/**/*.ts\" --cache --fix",
    "*.{md,ts,json,yml}": "prettier --write \"{src,test}/**/*.ts\""
  },
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.1",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rollup": "^4.4.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "rootDir": "test",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "coverageDirectory": "../coverage",
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ]
  }
}
